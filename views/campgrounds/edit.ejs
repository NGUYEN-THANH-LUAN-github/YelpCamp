<% layout('/layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <!-- from a form perspective, it's a POST request, but from express perspective it's a PUT request -->
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input id="title" type="text" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="location">Location</label>
            <input id="location" type="text" name="campground[location]" value="<%=campground.location%>">
        </div>
        <button>Update Campground</button>
    </form>
    <a href="/campgrounds/<%=campground._id%>">Cancel Edit</a>